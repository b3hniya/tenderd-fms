{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "apps/api/script/seed-accounts-to-db.script.js"],
  "exclude": ["node_modules", "**/node_modules", "dist", "**/dist", ".next", "**/.next"]
}
